#!/bin/bash

export MOEBIN=`which moe`

if [ -z "$MOEBIN" ] ; then
  echo "ERROR: Unable to find MOE. Please set PATH according to MOE documentation."
  exit 1
fi

if [ ! "$QBHOME" ]; then
    PRG=$0
    
    progdir=`dirname "$PRG"`
    if [ "$progdir" = "." ]; then
	    progdir=`pwd`
    fi
    
    if [ "`echo "$progdir" | grep -s '^/'`" ]; then
        progdir=$progdir
    else
        progdir=`pwd`/"$progdir"
    fi
    
    QBHOME=`echo "$progdir" | sed 's:/bin$::'`
    export QBHOME
fi

. ${QBHOME}/etc/qbenv.sh

# setup the MOE environment
if [ -z "${MOE_SVL_RUNPATH}" ]; then
    MOE_SVL_RUNPATH="${QBHOME}/svl:${HOME}/svl"; export MOE_SVL_RUNPATH
else
    MOE_SVL_RUNPATH="${QBHOME}/svl:$MOE_SVL_RUNPATH"; export MOE_SVL_RUNPATH
fi
if [ -z "${MOE_SVL_LOAD}" ]; then
    MOE_SVL_LOAD="${QBHOME}/svl"; export MOE_SVL_LOAD
else
    MOE_SVL_LOAD="${QBHOME}/svl"; export MOE_SVL_LOAD
fi

MOEHOME=`dirname ${MOEBIN}`
MOEHOME=`dirname ${MOEHOME}`
CLASSPATH=$QBHOME/${PLTFM_VER}/MOEDivcon.jar:$MOEHOME/java/svljava.jar:${CLASSPATH} ; export CLASSPATH        
if [ -z "${SVL_CLASSPATH}" ]; then
    SVL_CLASSPATH=$CLASSPATH ; export SVL_CLASSPATH
else
    SVL_CLASSPATH=$CLASSPATH:$SVL_CLASSPATH ; export SVL_CLASSPATH
fi

exec "$MOEBIN" "$@"

exit $?

