#!/bin/bash

# where the HDFView is installed
if [ ! "$QBHOME" ]; then
    PRG=$0
    
    progdir=`dirname "$PRG"`
    if [ "$progdir" = "." ]; then
	    progdir=`pwd`
    fi
    
    if [ "`echo "$progdir" | grep -s '^/'`" ]; then
        progdir=$progdir
    else
        progdir=`pwd`/"$progdir"
    fi
    
    QBHOME=`echo "$progdir" | sed 's:/bin$::'`
    export QBHOME
fi

. $QBHOME/etc/qbenv.sh

CLASSPATH=$QBHOME/$PLTFM_VER/lib/netcdf.jar:$QBHOME/$PLTFM_VER/lib/fits.jar:${CLASSPATH} ; export CLASSPATH

java -Xmx${QBJVMXmx} -Djava.library.path=$LD_LIBRARY_PATH -classpath $CLASSPATH ncsa.hdf.view.HDFView -root $QBHOME $*
