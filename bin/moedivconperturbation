#!/bin/sh

if [ ! "$QBHOME" ]; then
    PRG=$0
    
    progdir=`dirname "$PRG"`
    
    if [ "`echo "$progdir" | grep -s '^/'`" ]; then
        progdir=$progdir
    else
        progdir=`pwd`/"$progdir"
    fi
    
    progdir=`echo $progdir | sed 's:/.$::'`
    QBHOME=`echo "$progdir" | sed 's:/bin$::'`
    export QBHOME
fi

if [ -z "$QBENVSET" ]; then
    . $QBHOME/etc/qbenv.sh
fi

if [ -e $QBHOME/${PLTFM_VER}/bin/moedivconperturbation.bin ]; then
    exec "$QBHOME/${PLTFM_VER}/bin/moedivconperturbation.bin" "$@" "-" 
fi

exit $?
