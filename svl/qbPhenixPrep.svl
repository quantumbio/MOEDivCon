local function WriteLog [line,basename,inityn]
    static logFileName;
    local fileHandle;
    
    if not isnull inityn then
        logFileName = [];
        line = 'qbMOE INIT LOG';
    endif
    
    if isnull basename and isnull logFileName then
        logFileName = twrite ['{}.log','qbMOE'];
        fileHandle = fopenw logFileName;
    elseif isnull logFileName then
        logFileName = twrite ['{}-{}.log','qbMOE', basename];
        fileHandle = fopenw logFileName;
    else
        fileHandle = fopenx logFileName;
        fileHandle = fseek [fileHandle, fsize fileHandle];
    endif
    
    fwrite [fileHandle,'{}\n', line];
    fwrite ['{}\n', line];
    
    fclose fileHandle;
    return logFileName;
endfunction

